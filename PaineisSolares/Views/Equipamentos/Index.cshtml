@model IEnumerable<PaineisSolares.Models.Equipamento>

@{
    ViewData["Title"] = "Equipamentos";
}

<h2>@ViewData["Title"]</h2>

<br />
<p>
    <a asp-action="Create" class="btn btn-primary">Adicionar Equipamento</a>
</p>

<table class="table table-striped table-hover ">
    <thead>
        <tr>
            <th>
                Editar
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Descricao)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Quantidade)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ConsumoUnitario)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ConsumoTotal)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HorasDeUso)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ConsumoTotalPorDia)
            </th>
            <th>
                Deletar
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">
                        <i class="fas fa-pen"></i>
                    </a>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Descricao)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Quantidade)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ConsumoUnitario)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ConsumoTotal)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.HorasDeUso)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ConsumoTotalPorDia)
                </td>
                <td>
                    <a asp-for="Edit" asp-route-id="@item.Id">
                        <i class="fas fa-trash"></i>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>